= form_for @employee, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :designation, :class => 'control-label'
    .controls
      = f.text_field :designation, :class => 'text_field'
  .control-group
    = f.label :department_id, :class => 'control-label'
    .controls
      = f.text_field :department_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), employees_path, :class => 'btn'
